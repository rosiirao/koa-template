{
  "name": "koa-template",
  "type": "module",
  "version": "0.2.3",
  "description": "A template for koa project",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node dist/main.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:watch-ts\" \"npm:watch-node\"",
    "watch-test": "npm run test -- --watchAll",
    "watch-node": "nodemon --delay 2 --verbose --watch dist dist/main.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --forceExit --coverage --verbose --detectOpenHandles",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/main.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:watch-ts\" \"npm:serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rosiirao/koa-template.git"
  },
  "keywords": [
    "koa",
    "template"
  ],
  "author": "yu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rosiirao/koa-template/issues"
  },
  "homepage": "https://github.com/rosiirao/koa-template#readme",
  "devDependencies": {
    "@koa/router": "^13.0.0",
    "@swc/core": "^1.2.241",
    "@swc/jest": "^0.2.22",
    "@types/bcrypt": "^5.0.2",
    "@types/config": "^3.3.0",
    "@types/debug": "^4.1.12",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.12",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-send": "^4.1.6",
    "@types/node": "^22.5.3",
    "@types/supertest": "^6.0.2",
    "concurrently": "^7.0.0",
    "jest": "^29.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.3.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@prisma/client": "^4.1.1",
    "bcrypt": "^5.0.1",
    "config": "^3.3.1",
    "debug": "^4.1.1",
    "dotenv": "^16.0.0",
    "http-errors": "^2.0.0",
    "jose": "^4.1.0",
    "koa": "^2.13.0",
    "koa-body": "^6.0.1",
    "koa-compose": "^4.1.0",
    "koa-send": "^5.0.1",
    "nanoid": "^4.0.0",
    "node-cache": "^5.1.2",
    "prisma": "^4.1.1",
    "supertest": "^6.1.6",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  }
}
