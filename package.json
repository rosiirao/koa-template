{
  "name": "koa-template",
  "version": "0.2.3",
  "description": "A template for koa project",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint",
    "serve": "node dist/main.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:watch-ts\" \"npm:watch-node\"",
    "watch-test": "npm run test -- --watchAll",
    "watch-node": "nodemon --delay 2 --verbose --watch dist dist/main.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/main.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:watch-ts\" \"npm:serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rosiirao/koa-template.git"
  },
  "keywords": [
    "koa",
    "template"
  ],
  "author": "yu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rosiirao/koa-template/issues"
  },
  "homepage": "https://github.com/rosiirao/koa-template#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.11",
    "concurrently": "^6.2.0",
    "jest": "^27.2.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.3.2",
    "prisma": "^3.1.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1"
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "@prisma/client": "^3.1.1",
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^0.0.39",
    "@types/debug": "^4.1.7",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.7",
    "@types/koa-send": "^4.1.3",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "bcrypt": "^5.0.1",
    "config": "^3.3.1",
    "debug": "^4.1.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.5.2",
    "http-errors": "^1.8.0",
    "jose": "^3.14.3",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-compose": "^4.1.0",
    "koa-send": "^5.0.1",
    "nanoid": "^3.1.28",
    "node-cache": "^5.1.2",
    "typescript": "^4.4.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  }
}
